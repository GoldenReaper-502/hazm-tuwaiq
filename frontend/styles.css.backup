/* ====== Chat Styles ====== */
.chat-box {
  height: 300px;
  overflow-y: auto;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  border: 1px solid var(--line);
}

.chat-message {
  margin-bottom: 12px;
  padding: 12px;
  border-radius: 8px;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.chat-message.user {
  background: rgba(32, 201, 151, 0.15);
  border-left: 3px solid var(--accent2);
  text-align: right;
}

.chat-message.assistant {
  background: rgba(255, 152, 0, 0.15);
  border-left: 3px solid var(--accent);
}

.chat-role {
  font-size: 12px;
  font-weight: 600;
  color: var(--muted);
  margin-bottom: 4px;
}

.chat-content {
  font-size: 14px;
  line-height: 1.5;
  color: var(--text);
  word-break: break-word;
}

.chat-time {
  font-size: 11px;
  color: var(--muted);
  margin-top: 6px;
}

.chat-input-group {
  display: flex;
  gap: 10px;
  margin-bottom: 16px;
}

.chat-input {
  flex: 1;
  padding: 10px 12px;
  border-radius: 8px;
  border: 1px solid var(--line);
  background: rgba(0, 0, 0, 0.3);
  color: var(--text);
  font-family: inherit;
  resize: none;
  transition: border-color 0.2s;
}

.chat-input:focus {
  outline: none;
  border-color: var(--accent2);
  box-shadow: 0 0 0 2px rgba(32, 201, 151, 0.2);
}

